 @{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <meta name="viewport" content="width=device-width" />
    <title>Lista de Regiones</title>
</head>
<body>
    <div>
        @*Agregamos un NavBar*@
        <div class="Container">
            <nav class="navbar navbar-expand-lg navbar navbar-dark bg-dark">
                <div class="container-fluid">
                    <a class="navbar-brand" href="~/Index.cshtml">Inicio</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="~/VistaRegiones.cshtml">Regiones</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="~/VistaDepartamentos.cshtml">Departamentos</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <h2>Regiones Registradas: @ComprendiendoAspNet.Global.Regiones.Count</h2>

            <div class="TableDepartamentsContainer">
                <table class="table table-dark table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Name</th>
                            <th scope="col">Description</th>
                            <th scope="col">N° Departaments</th>

                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in ComprendiendoAspNet.Global.Regiones)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Nombre</td>
                                <td>@item.Descripcion</td>
                                <td>@ComprendiendoAspNet.Global.Departamentos.Where(x=> x.IdRegion == item.Id).Count()</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
</body>
</html>
